[alias]
	fom = fetch origin master
	mfh = merge FETCH_HEAD
	pom = push origin master
	uaa = reset HEAD .
	ua = reset HEAD
	uma = checkout -- .
	um = checkout --
	lc = show HEAD
	l = log --pretty=format:"%C(yellow)%h%Cgreen%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	lg = !git l --graph
	lga = !git lg --all
	ll = !git l --numstat
	llom = !git ll origin/master..
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	ldg = !git ld --graph
	ldr = !git ld --date=relative
	ldrg = !git ldr --graph
	fl = log -u
	dl = !git ll -1
	dld = !git fl -1
	ns = "!f() { git diff "$1"..; }; f"
	ifind = !git ls-files | grep -i
	igrep = grep -Ii
	cp = cherry-pick
	ap = add -p
	camend = commit --amend
	cne = commit --amend --no-edit
	cm = commit -m
	igrepcm = log -i --grep
	s = status -sb
	d = diff
	dc = diff --cached
	a = add
	p = push
	po = push origin
	c = checkout
	ri = rebase -i
	mk = checkout -b
	pob = "!f() { git push origin $(git branch | grep '^\\*' | cut -d' ' -f2) ;}; f"
