[credential]
	helper = cache
[color]
	ui = true
[core]
	editor = mg
[github]
	user = philipdexter
[ghi]
	token = !cat ~/.ghi_token
[alias]
	fom = fetch origin master
	mfh = merge FETCH_HEAD
	pom = push origin master
	uaa = reset HEAD .
	ua = reset HEAD
	uma = checkout -- .
	um = checkout --
	l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	lg = !git l --graph
	lga = !git lg --all
	ll = !git l --numstat
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	ldg = !git ld --graph
	ldr = !git ld --date=relative
	ldrg = !git ldr --graph
	fl = log -u
	dl = !git ll -1
	dld = !git fl -1
	ns = "!f() { git diff "$1"..; }; f"
	ifind = !git ls-files | grep -i
	igrep = grep -Ii
	cp = cherry-pick
	ap = add -p
	camend = commit --amend
	igrepcm = log -i --grep

[merge]
	tool = ediff

[mergetool.ediff]
    cmd = emacs --eval \" (progn (defun ediff-write-merge-buffer () (let ((file ediff-merge-store-file)) (set-buffer ediff-buffer-C) (write-region (point-min) (point-max) file) (message \\\"Merge buffer saved in: %s\\\" file) (set-buffer-modified-p nil) (sit-for 1))) (setq ediff-quit-hook 'kill-emacs ediff-quit-merge-hook 'ediff-write-merge-buffer) (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\"))\"
